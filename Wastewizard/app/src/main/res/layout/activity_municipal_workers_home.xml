<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavigationBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Municipal Corporation Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#AEB7C2"
                android:layout_marginBottom="16dp">

                <!-- Municipal Corporation Logo -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/municiple_corp_logo"
                    android:layout_gravity="center_horizontal"/>

                <!-- Municipal Corporation Name and Ward -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nanded Waghala City Municipal Corporation"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/textWardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ward: 1"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

                <!-- Number of Garbage Collection Vehicles -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Garbage Collection Vehicles: 10"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- News Section -->


            <!-- Events Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <!-- Dummy Events Items -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.Zero waste events are trending across the world, and weâ€™re here to help you host one of your own. Working with us to make your event zero waste will ensure that your event is in compliance with all the local laws while you do your part for the environment."
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Homemakers, event organizers ignorant of waste mgmt

Read more at:
http://timesofindia.indiatimes.com/articleshow/100061790.cms?utm_source=contentofinterest&amp;utm_medium=text&amp;utm_campaign=cppst"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Quick Links Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#AEB7C2"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Links"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <!-- Dummy Quick Links Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="#009688"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:text="Report Complains"
                        android:textColor="#000000"
                        android:id="@+id/reportComplaints"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="#ff5722"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:text="Contact Us"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>

            <!-- Leaderboard Section -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"

                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaderboard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <!-- Ward 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ward 1:"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:id="@+id/viewWard1"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="#01BDDB"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textPointsWard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Ward 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ward 2:"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:id="@+id/viewWard2"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.7"
                        android:background="#2196F3"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textPointsWard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Ward 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ward 3:"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:id="@+id/viewWard3"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:background="#4CAF50"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textPointsWard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Add more leaderboard entries for other wards -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#3E5545"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#92c696"

            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Pick Up Request"
            android:textColor="#000000"
            android:id="@+id/pickUpRequest"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#92c696"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Virtual Collect"
            android:textColor="#000000"
            android:id="@+id/virtualCollect"/>



    </LinearLayout>

</RelativeLayout>