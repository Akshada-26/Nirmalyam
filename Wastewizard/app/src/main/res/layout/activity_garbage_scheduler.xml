<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/waste_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:entries="@array/garbage_collecter"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waste_type_spinner"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Schedule" />


    <TextView
        android:id="@+id/previous_schedules_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_button"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="Previous Schedules"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/previous_schedules_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/previous_schedules_label"
        android:layout_margin="16dp"/>


</RelativeLayout>